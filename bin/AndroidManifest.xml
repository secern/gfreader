<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.gfreader.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/book"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.gfreader.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.gfreader.pdf.MainActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name="cn.gfreader.txt.MainActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name="cn.gfreader.txt.PaginationActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name="cn.gfreader.txt.ReadActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name="cn.gfreader.txt.ReadSettingActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name="cn.gfreader.filebrowser.MainActivity"
            android:label="@string/app_name"
            >
        </activity>
    </application>

</manifest>
